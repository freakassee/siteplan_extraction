include layout_showImage
block content
link(rel='stylesheet', href='/styles/showImage.css')
body
	#map
	#footer
		input(id='polygon' type='button' value='select edges')
		span(id='placeholder')
		input(id='process' type='button' value='process')
	script(type='text/javascript').
		var extent = [ 0, 0, #{img_width}, #{img_height} ],
			imageUrl = '#{url}' + '#{img_file}',
			imageFile = '#{img_file}'
			img_id = '#{img_id}';
		var draw;
	script(type='text/javascript' src='/js/showImage.js')